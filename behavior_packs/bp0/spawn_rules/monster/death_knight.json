{
	"format_version": "1.8.0",
	"minecraft:spawn_rules": {
		"description": {
			"identifier": "hfrlc:death_knight",
			"population_control": "monster"
		},
		"conditions": [
			{
				"minecraft:spawns_on_surface": {},
				"minecraft:spawns_underground": {},
				"minecraft:brightness_filter": { "min": 0, "max": 7, "adjust_for_weather": true },
				"minecraft:weight": { "default": 50 },
				"minecraft:biome_filter": {
					"any_of": [
						{ "test": "has_biome_tag", "value": "monster" },
						{ "test": "has_biome_tag", "value": "nether" }
					]
				},
				"minecraft:herd": { "min_size": 1, "max_size": 1 },
				"minecraft:distance_filter": { "min": 20, "max": 48 },
				"minecraft:delay_filter": {
					"min": 600,
					"max": 900,
					"identifier": "death_knight_spawn_delay",
					"spawn_chance": 25
				},
				"minecraft:world_age_filter": { "min": 1800 },
				"minecraft:density_limit": { "surface": 2, "underground": 2 }
			}
		]
	}
}
