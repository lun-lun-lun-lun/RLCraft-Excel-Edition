					"min": 0,
					"max": 15,
					"adjust_for_weather": false
				},
				"minecraft:biome_filter": {
					"any_of": [
						{ "test": "has_biome_tag", "value": "the_end" },
						{ "test": "has_biome_tag", "value": "end_highlands" },
						{ "test": "has_biome_tag", "value": "end_midlands" },
						{ "test": "has_biome_tag", "value": "end_barrens" }
					]
				},
				"minecraft:herd": {
					"min_size": 1,
					"max_size": 1,
