{
	"format_version": "1.17.0",
	"animation_controllers": {
		"controller.animation.dodge_roll_detector": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"dodge_roll_ready": "!q.has_component_group('dodge_roll_cooldown')"
						}
					]
				},
				"dodge_roll_ready": {
					"transitions": [
						{
							"trigger_dodge_roll": "q.is_sneaking && q.is_jumping && !q.has_component_group('dodge_roll_active')"
						},
						{
							"default": "q.has_component_group('dodge_roll_cooldown')"
						}
					]
				},
				"trigger_dodge_roll": {
					"on_entry": [
						"/event entity @s hfrlc:dodge_roll_start"
					],
					"transitions": [
						{
							"default": "1.0"
						}
					]
				}
			}
		}
	}
}
